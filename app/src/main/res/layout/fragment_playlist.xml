<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewTitlePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:textColor="#3e3b3b"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/listViewPlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitlePlayList" />

    <TextView
        android:id="@+id/textViewViewMorePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewPlayList"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#c9c7c7"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Xem thêm Playlists"
        android:textColor="#0a0a0a"
        android:textSize="19sp" />
</RelativeLayout>